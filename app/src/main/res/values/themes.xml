<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- window background color -->
        <item name="android:windowBackground">@color/common_window_background_color</item>
        <!-- Primary color of the application, used by the ActionBar by default -->
        <item name="colorPrimary">@color/common_primary_color</item>
        <!-- App's main dark color, used by default for the status bar -->
        <item name="colorPrimaryDark">@color/common_primary_dark_color</item>
        <!-- App accent color, used by default for the selection effect of global controls, such as CheckBox RadioButton Switch -->
        <item name="colorAccent">@color/common_accent_color</item>
        <!-- Default Text Color, Button, TextView Text Color -->
        <item name="android:textColor">@color/common_text_color</item>
        <!-- Default font size, font size of Button, TextView -->
        <item name="android:textSize">@dimen/sp_14</item>
        <!-- Default prompt color, Button and Text View prompt text color -->
        <item name="android:textColorHint">@color/common_text_hint_color</item>
        <!-- ActionMode overrides Action bar not placed below -->
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <!-- ActionMode Color -->
        <item name="actionModeBackground">@color/common_primary_color</item>
        <!-- Solve the issue of Button English strings of Android 5.1 and above being automatically uppercase -->
        <item name="android:textAllCaps">false</item>
        <!-- Solve the problem of ImageView not being able to automatically stretch images proportionally -->
        <!-- <item name="vn.xdeuhug.luckyMoney:adjustViewBounds">true</item>-->
        <!-- Input methods are hidden by default. Enabling this option will cause the input dialog box to not close the soft keyboard after closing. -->
        <!-- <item name="vn.xdeuhug.luckyMoney:windowSoftInputMode">stateHidden</item>-->
        <!-- Disable water ripple effect of RecyclerView NestedScrollView ViewPager -->
        <item name="android:overScrollMode">never</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Disable text spacing associated with TextView -->
        <item name="android:includeFontPadding">false</item>
        <!-- <item name="android:statusBarColor">@color/bg_mode</item>-->
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bg_theme_app</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.BaseMVVM" parent="AppTheme" />
</resources>